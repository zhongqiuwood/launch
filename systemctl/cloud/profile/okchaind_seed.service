[Unit]
Description=okchaind

[Service]
Type=simple
RemainAfterExit=yes
ExecStart=/bin/bash /home/ubuntu/okchain/launch/systemctl/cloud/profile/start_seed.sh
ExecStop=/bin/bash /home/ubuntu/okchain/launch/systemctl/cloud/profile/okchaind_kill.sh
Restart=always
User=ubuntu

[Install]
WantedBy=multi-user.target